---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const books = await getCollection("books");
console.log(books);



---

<Layout title="Welcome to BookDevs.">

<main>
	<h1 class="text-center text-7xl font-extrabold mb-24">Devs 👩‍💻👨‍💻 <span class="block"> Books </span>	</h1>


  <section aria-label="boosk recommended for developers" >
<div class="px-5 mx-auto max-w-screen-xl">
  <div class="grid gap-6 md:grid-cols-2 ">
     {
      books.map((book => {
       const { slug, data } = book
       const { title, author, img, readtime, description, buy } = data
       return (
       <article class="flex">
        <a href={`/book/${slug}`}  class="mr-8 mb-2 xl:mb-0 transition hover:scale-110" >
        <img 
        transition:name={`img-${slug}`}
        class="mr-10 sm:w-88  lg:min-w-80 rounded" 
        src={`/${img}`}
        alt={title} /> 
         </a>

        <div class="flex flex-col justify-center">
        <h2  
          transition:name={`title-${slug}`}  
          class="mb-2 text-2xl font-bold leading-tight text-yellow-400">{title}</h2>
        <p class="mb-4 text-gray-400 max-w-sm">Written by : {author}</p>
        <p class="mb-4" >{description}</p>
        <span class=" text-sm"> ⏳  {readtime} min reading time</span>

        </div>
    
       </article>
       )

      }))
     }
  </div>

</div>

   </section>
</main>




</Layout>



